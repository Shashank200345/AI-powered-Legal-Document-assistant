# Server Configuration
PORT=3001
NODE_ENV=development

# Google Cloud Configuration (Demo Mode - these can be left as placeholders)
GOOGLE_CLOUD_PROJECT_ID=demo-project
GOOGLE_APPLICATION_CREDENTIALS=./keys/service-account-key.json

# Google Cloud Services
GCP_REGION=us-central1
VERTEX_AI_LOCATION=us-central1
FIRESTORE_DATABASE=(default)
STORAGE_BUCKET_NAME=demo-bucket

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Security
CORS_ORIGIN=http://localhost:8080
API_SECRET_KEY=demo-secret-key-change-in-production

# Voice Interface
VOICE_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-D

# AI Model Configuration
LEGAL_MODEL_NAME=gemini-1.5-pro
EMBEDDING_MODEL=textembedding-gecko
MAX_TOKENS=4096
TEMPERATURE=0.3

# Demo Mode (Enable this to run without Google Cloud setup)
ENABLE_DEMO_MODE=true
DEMO_DOCUMENTS_PATH=./demo-documents
